{{ define "content_conversation" }}
<div class="content-header padded">
	<div class="row">
		<div class="col-sm-6">
			{{ template "breadcrumb" (dict "content" .Conversation "skipParents" false "skipSelf" true "section" .Section) }}
		</div>
		<div class="col-sm-6">
			{{ template "pagination" (dict "pagination" .Pagination "query" .Query) }}
		</div>
	</div>
</div>

<div class="content-body">
	<!-- TODO {% include "forms/content-moderation.html" %} -->
	<div class="list-items">
		<ul class="list-collection bordered padded">
		{{ $user := .User }}
		{{ $parent := .Conversation }}
		{{ $site := .Site }}
		{{ range .Conversation.Items.AsComments}}
			{{ template "block_comment_single" (dict "comment" . "itemType" "conversation" "parent" $parent "site" $site "user" $user) }}
		{{ end }}
		</ul>
	</div>
	<!-- TODO {% include "forms/content-moderation.html" %} -->
</div>

<div class="content-footer padded">
	<div class="row">
		<div class="col-sm-6"></div>
		<div class="col-sm-6">
			{{ template "pagination" (dict "pagination" .Pagination "query" .Query) }}
		</div>
	</div>
</div>
{{ end }}
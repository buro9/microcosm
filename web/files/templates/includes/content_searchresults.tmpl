{{ define "content_searchresults" }}
<div class="content-header padded">
	<div class="row">
		<div class="col-sm-6">
			{{ template "breadcrumb" (dict "content" .SearchResults "skipParents" true "skipSelf" true "section" .Section) }}
		</div>
		<div class="col-sm-6">
			{{ template "pagination" (dict "pagination" .Pagination "query" .Query) }}
		</div>
	</div>
</div>

<div class="content-body">
	<!-- TODO {% include "forms/content-moderation.html" %} -->
	<div class="list-items">
		<ul class="list-collection bordered padded">
		{{ $user := .User }}
		{{ range .SearchResults.Items.Items }}
			{{ if eq .ItemType "microcosm" }}

				{{ template "block_microcosm" (dict "microcosm" .AsMicrocosmSummary "showForum" false "user" $user) }}

			{{ else if eq .ItemType "conversation" }}

				{{ template "block_conversation" (dict "conversation" .AsConversationSummary "showForum" false "user" $user) }}

			{{ else }}

				<li>{{ .ItemType }}</li>

			{{ end }}
		{{ end }}
		</ul>
	</div>
	<!-- TODO {% include "forms/content-moderation.html" %} -->
</div>

<div class="content-footer padded">
	<div class="row">
		<div class="col-sm-6"></div>
		<div class="col-sm-6">
			{{ template "pagination" (dict "pagination" .Pagination "query" .Query) }}
		</div>
	</div>
</div>
{{ end }}